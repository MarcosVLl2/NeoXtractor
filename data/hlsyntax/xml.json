{
    "name": "XML",
    "formats": {
        "tag": {
            "foreground": "#800080@keyword"
        },
        "attribute": {
            "foreground": "#0066cc@attribute"
        },
        "value": {
            "foreground": "#008000@string"
        },
        "comment": {
            "foreground": "#808080@comment",
            "italic": true
        },
        "entity": {
            "foreground": "#ff6600@escape"
        },
        "cdata": {
            "foreground": "#000000@operator",
            "background": "#f0f0f0"
        },
        "declaration": {
            "foreground": "#808080@comment"
        }
    },
    "rules": [
        {
            "pattern": "<\\?xml[^>]*\\?>",
            "format": "declaration"
        },
        {
            "pattern": "<!DOCTYPE[^>]*>",
            "format": "declaration"
        },
        {
            "pattern": "<!--[\\s\\S]*?-->",
            "format": "comment"
        },
        {
            "pattern": "<!\\[CDATA\\[[\\s\\S]*?\\]\\]>",
            "format": "cdata"
        },
        {
            "pattern": "<\\/?[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)?",
            "format": "tag"
        },
        {
            "pattern": "\\s[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)?=",
            "format": "attribute"
        },
        {
            "pattern": "\"[^\"]*\"|'[^']*'",
            "format": "value"
        },
        {
            "pattern": "&[a-zA-Z0-9#]+;",
            "format": "entity"
        },
        {
            "pattern": ">|\\/>",
            "format": "tag"
        }
    ]
}
